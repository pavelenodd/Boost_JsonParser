{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cmake Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Parser", // Путь к скомпилированному исполняемому файлу(заменить на имя проекта)
            "args": [], // Аргументы командной строки, если они требуются
            "stopAtEntry": false, // Остановка на точке входа
            "cwd": "${workspaceFolder}/build", // Рабочая директория
            "environment": [],
            "externalConsole": true, // Включение или отключение внешней консоли
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe", // Путь к gdb 
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Debug Build" // Задача сборки перед запуском отладки
        },
        {
